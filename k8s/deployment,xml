apiVersion: apps/v1
kind: Deployment
metadata:
  # Name of the deployment
  name: food-delivery-app-deployment
  labels:
    app: food-delivery-app
spec:
  # Ensure 2 replicas of the application are running
  replicas: 2
  selector:
    matchLabels:
      app: food-delivery-app
  template:
    metadata:
      labels:
        app: food-delivery-app
    spec:
      containers:
      - name: food-delivery-container
        # Replace 'yourusername/food-delivery-app:latest' with your actual Docker image path
        image: yourusername/food-delivery-app:latest
        ports:
        # The port your container is listening on (matching EXPOSE in Dockerfile)
        - containerPort: 8080
        # Optional: Liveness and Readiness probes for health checks
        livenessProbe:
          httpGet:
            path: /actuator/health/liveness # Standard Spring Boot Actuator endpoint
            port: 8080
          initialDelaySeconds: 15
          periodSeconds: 20
        readinessProbe:
          httpGet:
            path: /actuator/health/readiness # Standard Spring Boot Actuator endpoint
            port: 8080
          initialDelaySeconds: 5
          periodSeconds: 10
        resources:
          # Define resource requests/limits (important for a stable cluster)
          requests:
            memory: "512Mi"
            cpu: "500m"
          limits:
            memory: "1024Mi"
            cpu: "1000m"
